{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "gretl-platform"
  },
  "labels": {
    "app": "gretl-platform"
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "gretl",
        "labels": {
          "role": "jenkins-slave"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": [
          {
            "name": "latest",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "${GRETL_RUNTIME_IMAGE}"
            }
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "name": "GRETL_RUNTIME_IMAGE",
      "displayName": "Docker image of GRETL runtime",
      "description": "Docker image and version of GRETL runtime to be pulled from Dockerhub.",
      "value": "chrira/jobrunner:latest"
    }
  ]
}
